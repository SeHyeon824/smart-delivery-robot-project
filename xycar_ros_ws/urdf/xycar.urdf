<robot name="xycar">

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.15"/>
      </geometry>
      <material name="grey_base">
        <color rgba="0.6 0.6 0.6 1.0"/> </material>
    </visual>
    </link>

  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.03 0.01"/>
      </geometry>
      <material name="blue_imu">
        <color rgba="0.2 0.2 0.8 1.0"/> </material>
    </visual>
  </link>

  <link name="laser">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.05"/>
      </geometry>
      <material name="red_laser">
        <color rgba="0.8 0.2 0.2 1.0"/> </material>
    </visual>
  </link>

  <joint name="baselink_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin rpy="0 0 0" xyz="0.15 0.0 0.23"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="baselink_to_imu_link" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin rpy="0 0 0" xyz="0.08 0.0 0.175"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
